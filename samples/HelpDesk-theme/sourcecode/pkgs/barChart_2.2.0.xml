      <appMagic:passThroughReference>Items</appMagic:passThroughReference>
      <appMagic:category>data</appMagic:category>
      <appMagic:displayName>##barChart_Selected_DisplayName##</appMagic:displayName>
      <properties>
        <property name="Value" localizedName="##barChart_Value##" datatype="Number" />
        <property name="Color" localizedName="##chart_Color##" datatype="color" />
